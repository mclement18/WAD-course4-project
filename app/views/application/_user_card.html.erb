<div class="card">
  <div class="card-header d-flex justify-content-start flex-wrap">
    <h3 class="mr-3"><%= user.name %></h3>
    <% if logged_in? && can_edit?(user) %>
      <div>
        <%= link_to translate('links.edit'), edit_user_path(user), class: 'btn btn-outline-secondary mr-3' %>
        <%= link_to translate('links.delete'), user_path(user), class: 'btn btn-outline-danger mr-3' %>
      </div>
    <% end %>
  </div>
  <% if user.avatar_url.present? %>
    <%= image_tag user.avatar_url, class: 'card-img-top', alt: "Avatar for #{user.name}" %>
  <% else %>
    <%= image_tag default_avatar(user), class: 'card-img-top', alt: "Avatar for #{user.name}" %>
  <% end %>
  <div class="card-body">
    <% if user.tips.any? %>
      <p><%= translate 'user_card.most_recent_tip' %>: <%= link_to user.tips.last.title, tip_path(user.tips.last) %></p>
    <% end %>
    <p><%= translate 'user_card.has_created' %> <%= pluralize_tips user.tips %> <%= translate 'user_card.and_made' %> <%= pluralize_comments user.comments %></p>
    <p class="text-muted"><%= translate 'user_card.member_since' %> <%= time_ago_in_words(user.created_at) %></p>
  </div>
</div>
