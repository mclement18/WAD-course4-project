<% if model.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p><%= pluralize(model.errors.count, t('errors.error'), locale: :en) %> <%= t('errors.header') %></p>

    <ul>
    <% model.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
