<div class="col-md-6 offset-md-3">
  <h1 class="text-center display-4 m-5"><%= translate 'sessions.new.title' %></h1>
  <%= form_for(@user) do |form| %>
    <% if @user.errors.any? %>
      <%= render partial: 'model_errors', locals: { model: @user } %>
    <% end %>

    <div class="form-group row">
      <%= form.label :email, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.email_field :email, class: 'form-control', placeholder: 'e.g. me@epfl.ch' %>
      </div>
    </div>
     <div class="form-group row">
       <div class="col-sm-10 offset-sm-2">
         <%= form.submit translate('links.login'), class: 'btn btn-primary btn-block' %>
       </div>
     </div>
  <% end %>
</div>
