<div class="col-md-6 offset-md-3">
  <h1 class="text-center display-4 m-5"><%= t('.title') %></h1>
  <%= form_tag(sessions_path) do %>
    <% if alert %>
      <div id="error_explanation">
        <p><%= alert %></p>
      </div>
    <% end %>

    <div class="form-group row">
      <%= label :email, 'Email', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'e.g. me@epfl.ch' %>
      </div>
    </div>
    <div class="form-group row">
      <%= label :password, 'Password', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>
     <div class="form-group row">
       <div class="col-sm-10 offset-sm-2">
         <%= submit_tag t('links.login'), class: 'btn btn-primary btn-block' %>
       </div>
     </div>
  <% end %>
</div>
