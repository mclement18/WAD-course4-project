<div class="mt-4 mb-4">
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item">
      <%= link_to t('links.account'), account_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to t('links.tips'), account_tips_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to t('links.favourites'), '#', class: 'nav-link active' %>
    </li>
  </ul>
</div>
<div class="row mt-4 mb-4">
  <h1 id="thisIsAccountFavouritesIndex" class="col-12 text-center display-4">
    <%= t('.title') %>
  </h1>
</div>
<div id="tipsList" class="row">
<% if @tips.any? %>
  <% @tips.each do |tip| %>
    <%= render partial: 'tip_card', locals: { tip: tip } %>
  <% end %>
<% else %>
  <p class="no-results mt-5 mb-5"><%= t('.no_favourites') %></p>
<% end %>
</div>
<%= paginate @tips %>
