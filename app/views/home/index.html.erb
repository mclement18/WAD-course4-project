<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="jumbotron">
  <h1 class="display-4"><%= t('.title') %></h1>
  <hr class="my-4">
  <p class="lead"><%= t('.subtitle') %></p>
  <p class="lead">
    <%= form_tag tips_path, method: :get do %>
      <div class="form-row">
        <div class="col-sm-9">
          <%= label_tag :q, t('search.label'), class: 'sr-only' %>
          <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: t('search.placeholder') %>
        </div>
        <div class="col-sm-2">
          <%= submit_tag t('search.button'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </p>
</div>

<h3><%= t('.secondtitle') %></h3>

<div class="row">
<% @tips.each do |tip| %>
  <%= render partial: 'tip_card', locals: { tip: tip } %>
<% end %>
</div>
